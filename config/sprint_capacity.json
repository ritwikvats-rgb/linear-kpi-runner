{
  "version": "2026Q1",
  "description": "Sprint capacity configuration - 1 SP = 1 working day",

  "quarter": {
    "name": "Q1 2026",
    "totalWorkingDays": 60,
    "cycles": 6,
    "workingDaysPerCycle": 10
  },

  "allocation": {
    "roadmapPercent": 60,
    "adhocPercent": 40,
    "description": "60% roadmap work, 40% buffer for adhoc/bugs/support"
  },

  "onCallDeductions": {
    "primaryPercent": 100,
    "backupPercent": 50,
    "description": "Primary loses 100% capacity (10 SP/cycle), Backup loses 50% (5 SP/cycle)"
  },

  "teams": {
    "FTS": {
      "members": [
