        { "name": "Dushyant Batra", "role": "BE", "availableDaysPerCycle": 10 },
        { "name": "Mayank Kumar", "role": "BE", "availableDaysPerCycle": 10 },
        { "name": "Tanishq Joshi", "role": "BE", "availableDaysPerCycle": 10 },
        { "name": "BE Dev 8", "role": "BE", "availableDaysPerCycle": 10 },
        { "name": "Abilash K M", "role": "FE", "availableDaysPerCycle": 10 },
        { "name": "Rishabh Bothra", "role": "FE", "availableDaysPerCycle": 10 },
        { "name": "FE Dev 3", "role": "FE", "availableDaysPerCycle": 10 },
        { "name": "FE Dev 4", "role": "FE", "availableDaysPerCycle": 10 }
      ],
      "onCallRoles": {
        "bePrimary": 1,
        "beBackup": 1,
        "fePrimary": 1,
        "feBackup": 1
      }
    }
  },

  "adhocCategories": [
    { "name": "Adhoc BW", "defaultSP": 42, "reason": "Stakeholder requests, urgent features, bugs, support" }
  ],

  "formulas": {
    "grossWorkingDays": "teamSize x workingDaysPerCycle",
    "onCallDeduction": "(primaryCount x workingDays x 0.4) + (backupCount x workingDays x 0.2)",
    "availableSP": "grossWorkingDays - leaveDays - onCallDeduction",
    "roadmapBudget": "availableSP x 0.6",
    "adhocBudget": "availableSP x 0.4",
    "deliveryRate": "(completedSP / committedSP) x 100",
    "spillover": "committedSP - completedSP"
  }
}
